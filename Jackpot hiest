<body>
  <div class="container">
    <h1>🎰 Jackpot Heist</h1>
    <div class="slot-machine">
      <div class="reel">🍒</div>
      <div class="reel">💎</div>
      <div class="reel">🔔</div>
    </div>
    <button onclick="spinReels()">Spin</button>
  </div>

  <script>
    const symbols = ['🍒', '💎', '🔔', '🍋', '7️⃣', '⭐', '🍀'];
    const reels = document.querySelectorAll('.reel');

    function spinReels() {
      reels.forEach(reel => {
        const random = Math.floor(Math.random() * symbols.length);
        reel.textContent = symbols[random];
      });
    }
  </script>
